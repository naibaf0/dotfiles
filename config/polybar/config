label-full-foreground = ${colors.grey}

format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>

ramp-capacity-0 = %{F#da4939}
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = %{F#5a647e}

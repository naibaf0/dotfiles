path=(
  ~/.bin
  ~/.local/{bin,sbin}
  /usr/local/{bin,sbin}
  $path
)

# Set the list of directories that Zsh searches for programs.
if [ "$(uname -s)" = "Darwin" ]; then
  path=(
    $(brew --prefix coreutils)/libexec/gnubin
    $(brew --prefix python)/libexec/bin
    $path
  )
fi

export GOPATH=${HOME}/projects/go

path+=(
  ${GOPATH}/bin
)

